    <body class="ui-long-content">

        <div class="header2">
            <h1>Diabete@Home</h1>
            <img src="/media/logo.png" alt="LOGO">          
            <div class="Backbutton">
                <p><a href="/patient/dashboard" style="color: white;text-decoration: none;">ï¼œBack</a></p>
            </div>
        </div>

        <!-- name of daily record page -->
          <div class="row">     
            <div class="content4">
              <h2>DAILY RECORD</h2>
          </div>

          <form action="" method="post">
            <!-- patient can enter blood glucose level -->
            {{#if patient.need_blood_glucose_level}}  
            <div class="patientadd">
                <div class="patientadd-a">
                    <span>blood glucose level:</span>
                    <div class="datadata">
                        <input type="number" name="blood_glucose_level" min="0" step="0.1" style= "text-align: center;" value="{{record.blood_glucose_level}}">
                        <span>nmol/L</span>
                    </div>
                </div>
                <div class="button0">
                    <span>comment(optional):</span>
                    <textarea name="blood_glucose_level_commment">{{record.blood_glucose_level_commment}}</textarea>
                </div>
            </div>
            {{/if}}
            
            <!-- patient can enter weight -->
            {{#if patient.need_weight}}
            <div class="patientadd">
                <div class="patientadd-a">
                    <span>weight:</span>
                    <div class="datadata">
                      <input type="number" name="weight" min="0" step="0.01" value="{{record.weight}}">
                        <span>kg</span>
                    </div>
                </div>
                <div class="button0">
                    <span>comment(optional):</span>
                    <textarea name="weight_commment">{{record.weight_commment}}</textarea>
                </div>
            </div>
            {{/if}}
            
            <!-- patient can enter doses of insulin taken -->
            {{#if patient.need_doses_of_insulin_taken}}
            <div class="patientadd">
                <div class="patientadd-a">
                    <span>doses of insulin taken:</span>
                    <div class="datadata">
                      <input type="number" name="doses_of_insulin_taken" min="0" step="1" value="{{record.doses_of_insulin_taken}}">
                        <span>doses</span>
                    </div>
                </div>
                <div class="button0">
                    <span>comment(optional):</span>
                    <textarea name="doses_of_insulin_taken_commment">{{record.doses_of_insulin_taken_commment}}</textarea>
                </div>
            </div>
            {{/if}}
            
            <!-- patient can enter exercise data -->            
            {{#if patient.need_exercise}}
            <div class="patientadd">
                <div class="patientadd-a">
                    <span>exercise:</span>
                    <div class="datadata">
                      <input type="number" name="exercise" min="0" value="{{record.exercise}}">
                        <span>steps</span>
                    </div>
                </div>
                <div class="button0">
                    <span>comment(optional):</span>
                    <textarea name="exercise_commment">{{record.exercise_commment}}</textarea>
                </div>
            </div>
            {{/if}}
            
            <div class="submit-a">
                <input class="buttona" type="submit" value="save" formaction="./addDailyRecord/save">
                <input class="buttona" type="submit" value="submit">
                <!--<button>Save</button>
                <button>Submit</button>-->
            </div>

