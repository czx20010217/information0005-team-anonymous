        <!-- name of daily record page -->
          <div class="row">     
            <div class="content4">
              <h2>DAILY RECORD</h2>
          </div>
            <!-- this can let patient choose any date -->
            <div class="date">
                <form action="">
                <p>Date:<input type="date" /></p>
                </form>
            </div>

          <!-- patients can enter four data in this page -->
          <div class="records">
              <form action="" method="post">
                <ul class="recorddata">
                  
                    <li class="bglInput">
                      <h3>blood glucose level:</h3><!-- here to entrer the blood glucose level -->
                      <input type="number" name="blood_glucose_level" min="0" step="0.1" style= "text-align: center;"><span>nmol/L</span>
                      
                      <p>comment(optional)</p>
                      <textarea name="blood_glucose_level_commment"></textarea>
                   </li>
                  
                  
                    <li class="weightInput">
                      <h3>weight:</h3><!-- here to enter the weight -->
                      <input type="number" name="weight" min="0" step="0.01"><span>kg</span>
                      <p>comment(optional)</p>
                      <textarea name="weight_commment"></textarea>
                    </li>
                  
                  <hr>
                  
                    <li class="dosesInput">
                      <h3>doses of insulin taken:</h3><!-- here to choose the numbver of doses patient taken -->
                      <select name="doses_of_insulin_taken">
                          <option value="0">0</option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                          <option value="5">5</option>
                        </select><span>doses</span>
                      <p>comment(optional)</p>
                      <textarea name="doses_of_insulin_taken_commment"></textarea>
                   </li>
                  
                    <li class="exerciseInput">
                      <h3>exercise:</h3><!-- here to enter exercise -->
                      <input type="number" name="exercise" min="0"><span>steps</span>
                      <p>comment(optional)</p>
                      <textarea name="exercise_commment"></textarea>
                    </li>
                    <div class="subline">
                      <input class="submitbutton" type="submit" value="submit"></a>
                    </div>
                    
                  
                </ul>
            </div>


